			<Label Canvas.Left="6" Canvas.Top="6" Content="TIME: 0" Height="41" Name="lblTime" Width="183" Background="{x:Null}" BorderThickness="4" BorderBrush="{x:Null}" FontSize="18" FontStyle="Normal"></Label>
		</Canvas>
		<Label Content="Press A/D or Left/Right to move hand, press J/S/Down to hold/drop bricks." Name="label2" Margin="14,385,13,24" />
		<Label Content="Press 3 to 6 to start new game with corresponding bricks." Height="28" HorizontalAlignment="Left" Margin="14,410,0,0" Name="label3" VerticalAlignment="Top" Width="371" />
	</Grid>
</Window>
