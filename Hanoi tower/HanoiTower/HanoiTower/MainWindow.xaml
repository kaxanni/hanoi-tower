					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FFAAAAAA" Offset="0" />
						<GradientStop Color="White" Offset="1" />
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
			<Rectangle Canvas.Left="47" Canvas.Top="224" Height="17" Name="step6" Stroke="Black" Width="116" Fill="#FFE22323" Visibility="Hidden"></Rectangle>
			<Rectangle Canvas.Left="47" Canvas.Top="188" Fill="#FF59A729" Height="17" Name="step5" Stroke="Black" Width="101" Visibility="Hidden" />
			<Rectangle Canvas.Left="47" Canvas.Top="156" Fill="Yellow" Height="17" Name="step4" Stroke="Black" Width="85" Visibility="Hidden" />
